# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python - 4 space indentation (pep8)
[*.py]
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[{*.yml,*.json}]
indent_style = space
indent_size = 2

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

[*.{md,txt}]
indent_style = space
indent_size = 4
max_line_length = 105
trim_trailing_whitespace = false

[Makefile]
indent_style = space
